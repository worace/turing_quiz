<p id="notice"><%= notice %></p>

<h1>Listing Hints</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hints.each do |hint| %>
      <tr>
        <td><%= hint.body %></td>
        <td><%= hint.question_id %></td>
        <td><%= link_to 'Show', hint %></td>
        <td><%= link_to 'Edit', edit_hint_path(hint) %></td>
        <td><%= link_to 'Destroy', hint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hint', new_hint_path %>
